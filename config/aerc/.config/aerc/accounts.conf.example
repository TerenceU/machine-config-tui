# accounts.conf.example - Template for aerc email accounts
# Copy to ~/.config/aerc/accounts.conf and customize

# ============================================================
# Gmail with OAuth2
# ============================================================
[Personal Gmail]
source = imaps://your-email@gmail.com@imap.gmail.com:993
outgoing = smtp+plain://your-email@gmail.com@smtp.gmail.com:587
from = Your Name <your-email@gmail.com>
copy-to = [Gmail]/Sent Mail
archive = [Gmail]/All Mail
postpone = [Gmail]/Drafts
default = Inbox

# OAuth2 authentication
source-cred-cmd = python ~/.config/aerc/mutt_oauth2.py ~/.config/aerc/gmail.tokens
outgoing-cred-cmd = python ~/.config/aerc/mutt_oauth2.py ~/.config/aerc/gmail.tokens

